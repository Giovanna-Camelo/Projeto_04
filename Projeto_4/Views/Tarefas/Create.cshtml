@model Tarefas

<h2>Adicionar Tarefa📥</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TarefaName" class="control-label"></label>
        <input asp-for="TarefaName" class="form-control" />
        <span asp-validation-for="TarefaName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TarefaDescription" class="control-label"></label>
        <input asp-for="TarefaDescription" class="form-control" />
        <span asp-validation-for="TarefaDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-select">
            <option>Concluído</option>
            <option>Para fazer</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>